@using FinanceSystem.Web.Helpers
@using System.Security.Claims
@{
    var controllerName = ViewContext.RouteData.Values["Controller"]?.ToString();
    var actionName = ViewContext.RouteData.Values["Action"]?.ToString();
    var isAuthenticated = User?.Identity?.IsAuthenticated ?? false;
    var username = User?.Identity?.Name?.ToUpper() ?? "não autenticado";
    var token = Context.Session.GetString("JWToken") ?? "token ausente";
    var userId = User?.FindFirstValue("http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier");
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Finance System</title>
    <meta http-equiv="cache-control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="pragma" content="no-cache" />
    <meta http-equiv="expires" content="0" />

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pages/investments.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pages/income.css" asp-append-version="true">
    <link rel="icon" type="image/svg+xml" href="~/images/favicon.svg" asp-append-version="true">
    <link rel="icon" type="image/png" sizes="32x32" href="~/images/icon-32x32.png" asp-append-version="true">
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/icon-16x16.png" asp-append-version="true">
    <link rel="apple-touch-icon" sizes="180x180" href="~/images/apple-touch-icon.png" asp-append-version="true">
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.bootstrap5.min.css" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="sidebar" id="sidebar">
        <partial name="_Partials/_SidebarHeader" />

        <div class="sidebar-menu">
            <div class="sidebar-menu-header">Menu Principal</div>
            <div class="sidebar-menu-item">
                <a asp-controller="Home" asp-action="Index" class="sidebar-menu-link @(controllerName == "Home" && actionName == "Index" ? "active" : "")">
                    <span class="sidebar-menu-icon"><i class="fas fa-home"></i></span>
                    <span>Inicio</span>
                </a>
            </div>

            <partial name="_Partials/_SidebarMenuCreditCards" />
            <partial name="_Partials/_SidebarMenuIncomes" />
            <partial name="_Partials/_SidebarMenuPayments" />
            <partial name="_Partials/_SidebarMenuInvestments" />
            <partial name="_Partials/_SidebarMenuFinancings" />
            <partial name="_Partials/_SidebarMenuReports" />
        </div>
        <partial name="_Partials/_SidebarMenuAdmin" />
    </div>
    <partial name="_Partials/_Topbar" />
    <div class="main-content" id="main-content">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- DataTables Scripts -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.9/js/responsive.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>


    <!-- Scripts principais -->
    <script src="~/js/core/core.js" defer></script>
    <script src="~/js/core/ui.js" defer></script>
    <script src="~/js/core/validation.js" defer></script>

    <!-- Módulos reutilizáveis -->
    <script src="~/js/modules/forms.js" defer></script>
    <script src="~/js/modules/tables.js" defer></script>
    <script src="~/js/modules/charts.js" defer></script>
    <script src="~/js/modules/financial.js" defer></script>

    <script src="~/js/pages/dashboard.js" asp-append-version="true" defer></script>
    <script src="~/js/pages/creditcards.js" asp-append-version="true" defer></script>
    <script src="~/js/pages/financings.js" asp-append-version="true" defer></script>
    <script src="~/js/pages/investments.js" asp-append-version="true" defer></script>
    <script src="~/js/pages/payments.js" asp-append-version="true" defer></script>
    <script src="~/js/pages/users.js" asp-append-version="true" defer></script>

    <!-- Inicialização global -->
    <script src="~/js/app.js" asp-append-version="true" defer></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>