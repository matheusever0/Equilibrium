@{
    ViewData["Title"] = "Dashboard";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/dashboard.css" asp-append-version="true">
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Dashboard Financeiro</h1>
        <a asp-controller="Reports" asp-action="Monthly" asp-route-month="@DateTime.Now.Month" asp-route-year="@DateTime.Now.Year" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-download fa-sm text-white-50"></i> Gerar Relatório
        </a>
    </div>

    @await Html.PartialAsync("~/Views/Shared/_CollapseSection.cshtml", new FinanceSystem.Web.Models.Shared.CollapseSectionModel
{
    Id = "financial-summary",
    Title = "Resumo Financeiro",
    Url = Url.Action("GetFinancialSummary", "Home")!,
    InitiallyExpanded = true
})

    @await Html.PartialAsync("~/Views/Shared/_CollapseSection.cshtml", new FinanceSystem.Web.Models.Shared.CollapseSectionModel
{
    Id = "quick-actions",
    Title = "Ações Rápidas",
    Url = Url.Action("GetQuickActions", "Home")!,
    InitiallyExpanded = true
})

    @await Html.PartialAsync("~/Views/Shared/_CollapseSection.cshtml", new FinanceSystem.Web.Models.Shared.CollapseSectionModel
{
    Id = "monthly-chart",
    Title = "Receitas x Gastos Mensais",
    Url = Url.Action("GetMonthlyComparison", "Home")!,
    InitiallyExpanded = false
})

    @await Html.PartialAsync("~/Views/Shared/_CollapseSection.cshtml", new FinanceSystem.Web.Models.Shared.CollapseSectionModel
{
    Id = "pendings",
    Title = "Pendências",
    Url = Url.Action("GetPendings", "Home")!,
    InitiallyExpanded = false
})

    @await Html.PartialAsync("~/Views/Shared/_CollapseSection.cshtml", new FinanceSystem.Web.Models.Shared.CollapseSectionModel
{
    Id = "investment-summary",
    Title = "Resumo de Investimentos",
    Url = Url.Action("GetInvestmentSummary", "Home")!,
    InitiallyExpanded = false
})
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/components/charts.js" asp-append-version="true"></script>
    <script src="~/js/pages/dashboard.js" asp-append-version="true"></script>
    <script src="~/js/pages/dashboard-collapse.js" asp-append-version="true"></script>
    <script src="~/js/utils/helpers.js" asp-append-version="true"></script>
}