@{
    ViewData["Title"] = "Início";
}

<div class="container-fluid px-0">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Bem-vindo ao Finance System</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-4">
                                <h2>Olá, @User.Identity?.Name!</h2>
                                <p class="text-muted">
                                    Bem-vindo ao seu sistema de gerenciamento. Você está logado como
                                    <strong>@(User.IsInRole("Admin") ? "Administrador" : "Usuário")</strong>.
                                </p>
                            </div>

                            <div class="mb-4">
                                <h5 class="mb-3">Informações do Usuário</h5>
                                <div class="d-flex align-items-center mb-3">
                                    <div class="user-avatar me-3">
                                        <i class="fas fa-user fa-2x"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">@User.Identity?.Name</h6>
                                        <span class="badge bg-primary">@(User.IsInRole("Admin") ? "Administrador" : "Usuário")</span>
                                    </div>
                                </div>
                                <p class="text-muted">
                                    Data de acesso: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h5 class="mb-3">Acesso Rápido</h5>

                            <div class="row">
                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="col-md-6 mb-3">
                                        <div class="card border-0 shadow-sm h-100">
                                            <div class="card-body">
                                                <div class="d-flex align-items-center mb-3">
                                                    <div class="icon-circle bg-primary text-white me-3">
                                                        <i class="fas fa-users"></i>
                                                    </div>
                                                    <h6 class="mb-0">Gerenciar Usuários</h6>
                                                </div>
                                                <p class="small text-muted">Acesse para cadastrar, editar ou excluir usuários do sistema.</p>
                                                <a asp-controller="Users" asp-action="Index" class="btn btn-sm btn-outline-primary">Acessar</a>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <div class="card border-0 shadow-sm h-100">
                                            <div class="card-body">
                                                <div class="d-flex align-items-center mb-3">
                                                    <div class="icon-circle bg-success text-white me-3">
                                                        <i class="fas fa-user-tag"></i>
                                                    </div>
                                                    <h6 class="mb-0">Gerenciar Perfis</h6>
                                                </div>
                                                <p class="small text-muted">Acesse para cadastrar, editar ou excluir perfis de acesso.</p>
                                                <a asp-controller="Roles" asp-action="Index" class="btn btn-sm btn-outline-success">Acessar</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="col-12">
                                        <div class="alert alert-info">
                                            <i class="fas fa-info-circle me-2"></i>
                                            Você está logado como usuário regular. Apenas administradores têm acesso às funcionalidades de gerenciamento.
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>