@using FinanceSystem.Web.Helpers
@using FinanceSystem.Web.Models.Shared
@{
    ViewData["Title"] = "Inicio";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/dashboard.css" asp-append-version="true">
}

<div class="container-fluid">
    <div class="d-flex justify-content-end mb-3">
        <div class="d-flex gap-2">
            @if (await PermissionHelper.HasPermissionAsync(Context, "payments.create"))
            {
                <a asp-controller="Payments" asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                    <span class="icon text-white-50">
                        <i class="fas fa-plus"></i>
                    </span>
                    <span class="text">Novo Pagamento</span>
                </a>
            }
            @if (await PermissionHelper.HasPermissionAsync(Context, "incomes.create"))
            {
                <a asp-controller="Incomes" asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm">
                    <span class="icon text-white-50">
                        <i class="fas fa-plus"></i>
                    </span>
                    <span class="text">Nova Receita</span>
                </a>
            }
            <a asp-controller="Reports" asp-action="Monthly" asp-route-month="@DateTime.Now.Month" asp-route-year="@DateTime.Now.Year" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                <i class="fas fa-download fa-sm text-white-50"></i> Gerar Relatório
            </a>
        </div>
    </div>

    @await Html.PartialAsync("~/Views/Shared/_CollapseSection.cshtml", new CollapseSectionModel
{
    Id = "financial-summary",
    Title = "Resumo Financeiro",
    Url = Url.Action("GetFinancialSummary", "Home")!,
    InitiallyExpanded = false
})

    @await Html.PartialAsync("~/Views/Shared/_CollapseSection.cshtml", new CollapseSectionModel
{
    Id = "monthly-chart",
    Title = "Receitas x Gastos Mensais",
    Url = Url.Action("GetMonthlyComparison", "Home")!,
    InitiallyExpanded = false
})

    @await Html.PartialAsync("~/Views/Shared/_CollapseSection.cshtml", new CollapseSectionModel
{
    Id = "pendings",
    Title = "Pendências",
    Url = Url.Action("GetPendings", "Home")!,
    InitiallyExpanded = false
})

    @await Html.PartialAsync("~/Views/Shared/_CollapseSection.cshtml", new CollapseSectionModel
{
    Id = "investment-summary",
    Title = "Resumo de Investimentos",
    Url = Url.Action("GetInvestmentSummary", "Home")!,
    InitiallyExpanded = false
})
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/components/charts.js" asp-append-version="true"></script>
    <script src="~/js/pages/dashboard.js" asp-append-version="true"></script>
    <script src="~/js/pages/dashboard-collapse.js" asp-append-version="true"></script>
    <script src="~/js/utils/helpers.js" asp-append-version="true"></script>
}