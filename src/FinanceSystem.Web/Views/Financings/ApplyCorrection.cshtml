@model ApplyCorrectionModel
@using FinanceSystem.Web.Helpers
@using FinanceSystem.Web.Models.Financing
@{
    ViewData["Title"] = "Aplicar Correção Monetária";
    var financing = ViewBag.Financing as FinancingModel;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between mb-3">
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
        <a asp-action="Details" asp-route-id="@Model.FinancingId" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Voltar
        </a>
    </div>

    @if (financing != null)
    {
        <div class="row mb-4">
            <div class="col-lg-4">
                <div class="card shadow mb-4">
                    <div class="card-header py-3 d-flex justify-content-between align-items-center">
                        <h6 class="m-0 font-weight-bold text-primary">Informações do Financiamento</h6>
                        <span class="badge bg-primary">@financing.TypeDescription</span>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <h5 class="small font-weight-bold text-muted">Descrição</h5>
                            <p>@financing.Description</p>
                        </div>
                        <div class="mb-3">
                            <h5 class="small font-weight-bold text-muted">Valor Total</h5>
                            <p class="fw-bold">@financing.GetFormattedTotalAmount()</p>
                        </div>
                        <div class="mb-3">
                            <h5 class="small font-weight-bold text-muted">Dívida Restante</h5>
                            <p class="text-danger fw-bold">@financing.GetFormattedRemainingDebt()</p>
                        </div>
                        <div class="mb-3">
                            <h5 class="small font-weight-bold text-muted">Índice de Correção</h5>
                            <p>@financing.CorrectionIndexDescription</p>
                        </div>
                        @if (financing.LastCorrectionDate.HasValue)
                        {
                            <div class="mb-3">
                                <h5 class="small font-weight-bold text-muted">Última Correção</h5>
                                <p>@financing.LastCorrectionDate.Value.ToString("dd/MM/yyyy")</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Aplicar Correção Monetária</h6>
                    </div>
                    <div class="card-body">
                        <form asp-action="ApplyCorrection" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="FinancingId" />

                            <div class="mb-3">
                                <label asp-for="IndexValue" class="form-label">Valor do Índice (%)</label>
                                <div class="input-group">
                                    <input asp-for="IndexValue" class="form-control" type="text" step="0.0001" />
                                    <span class="input-group-text">%</span>
                                </div>
                                <span asp-validation-for="IndexValue" class="text-danger"></span>
                                <small class="form-text text-muted">Informe o valor do índice em percentual. Por exemplo, para 0.5%, digite 0.5</small>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CorrectionDate" class="form-label">Data da Correção</label>
                                <input asp-for="CorrectionDate" class="form-control" type="date" />
                                <span asp-validation-for="CorrectionDate" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Notes" class="form-label">Observações</label>
                                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Observações sobre esta correção monetária"></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>

                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <strong>Atenção:</strong>
                                A aplicação de correção monetária irá ajustar o saldo devedor com base no índice informado.
                                Esta ação não pode ser desfeita.
                            </div>

                            <div class="mb-3">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-sync-alt me-1"></i> Aplicar Correção
                                </button>
                                <a asp-action="Details" asp-route-id="@Model.FinancingId" class="btn btn-secondary">Cancelar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle me-2"></i> Financiamento não encontrado.
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Inicializa formatação de percentuais
            $('.percent-input').on('input', function () {
                let value = $(this).val().replace(/[^\d.,]/g, '');
                if (value) {
                    $(this).val(value + '%');
                }
            });
        });
    </script>
}