@model FinanceSystem.Web.Models.UpdateUserModel

@{
    ViewData["Title"] = "Editar Usuário";
    var roles = ViewBag.Roles as IEnumerable<FinanceSystem.Web.Models.RoleModel>;
    var isAdmin = User.IsInRole("Admin");

    // Preservar role de Admin se não for possível editar
    var adminRole = Model.Roles.Contains("Admin");
}

<h1>Editar Usuário</h1>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <small class="form-text text-muted">Deixe em branco para manter a senha atual.</small>
            </div>

            <div class="mb-3">
                <label asp-for="IsActive" class="form-label">Status do Usuário</label>
                <div class="status-toggle-container">
                    <div class="form-check form-switch">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" id="IsActive">
                        <label class="form-check-label" for="IsActive">
                            @if (Model.IsActive)
                            {
                                <span id="statusLabel" class="badge bg-success">Ativo</span>
                            }
                            else
                            {
                                <span id="statusLabel" class="badge bg-danger">Inativo</span>
                            }
                        </label>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Roles" class="form-label">Perfis <span class="text-danger">*</span></label>
                <div class="card">
                    <div class="card-body p-2">
                        <div class="mb-2">
                            <select id="roleSelector" class="form-select">
                                <option value="" selected disabled>Selecione um perfil para adicionar...</option>
                                @foreach (var role in roles)
                                {
                                    <option value="@role.Name">@role.Name</option>
                                }
                            </select>
                            <button type="button" id="addRoleBtn" class="btn btn-sm btn-primary mt-2">
                                <i class="fas fa-plus me-1"></i>Adicionar Perfil
                            </button>
                        </div>

                        <div id="selectedRolesContainer" class="mt-3">
                            @foreach (var roleName in Model.Roles)
                            {
                                if (roleName == "Admin" && !isAdmin)
                                {
                                    <div class="badge bg-primary p-2 me-2 mb-2">
                                        <input type="hidden" name="selectedRoles" value="Admin" />
                                        Admin <i class="fas fa-lock ms-1" title="Role protegida"></i>
                                    </div>
                                }
                                else
                                {
                                    <div class="badge bg-primary p-2 me-2 mb-2 role-badge">
                                        <input type="hidden" name="selectedRoles" value="@roleName" />
                                        @roleName
                                        <a href="#" class="ms-1 text-white remove-role"><i class="fas fa-times"></i></a>
                                    </div>
                                }
                            }
                        </div>
                        <span asp-validation-for="Roles" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Salvar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/user-edit.js" asp-append-version="true"></script>
}