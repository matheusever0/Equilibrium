@using FinanceSystem.Web.Models.Investment
@model UpdateInvestmentModel

@{
    ViewData["Title"] = "Editar Investimento";
    var symbol = ViewBag.Symbol;
    var currentName = ViewBag.CurrentName;
    var investmentId = ViewBag.InvestmentId;
}

<h1>Editar Investimento - @symbol</h1>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Dados do Investimento</h6>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="id" value="@investmentId" />

            <div class="mb-3">
                <label class="form-label">Símbolo</label>
                <input type="text" class="form-control" value="@symbol" readonly />
                <small class="form-text text-muted">O símbolo não pode ser alterado.</small>
            </div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Nome</label>
                <input asp-for="Name" class="form-control" value="@currentName" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                <span>Para alterar preços, quantidades ou outros dados, utilize as transações na página de detalhes.</span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Details" asp-route-id="@investmentId" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </form>
    </div>
</div>