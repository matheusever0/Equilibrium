@model FinanceSystem.Web.Models.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Finance System</title>
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/css/login.css" rel="stylesheet" asp-append-version="true">
</head>
<body class="login-page">
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="logo">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h2>Finance System</h2>
                <p class="mb-0">Controle financeiro inteligente</p>
            </div>
            <div class="login-body">
                <form asp-action="Login" asp-controller="Account" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Username" name="Username" id="Username" class="form-control" placeholder="Nome de usuário" />
                        <label for="Username">Nome de usuário</label>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Password" name="Password" id="Password" class="form-control" type="password" placeholder="Senha" />
                        <label for="Password">Senha</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-login">
                            <i class="fas fa-sign-in-alt me-2"></i>Entrar
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="login-footer">
            <small>&copy; 2025 Finance System - Todos os direitos reservados</small>
        </div>
    </div>

    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/jquery.validate.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/jquery.validate.unobtrusive.min.js" asp-append-version="true"></script>
</body>
</html>