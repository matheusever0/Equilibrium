@using Equilibrium.Web.Models.User
@model UserModel

@{
    ViewData["Title"] = "Excluir Usuário";
}

<div class="alert alert-danger">
    <h3>Tem certeza que deseja excluir este usuário?</h3>
    <p>Esta ação não poderá ser desfeita.</p>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nome de Usuário</dt>
            <dd class="col-sm-9">@Model.Username</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Perfis</dt>
            <dd class="col-sm-9">@string.Join(", ", Model.Roles)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">Excluir</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>