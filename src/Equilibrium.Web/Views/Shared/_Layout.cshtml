@using Equilibrium.Web.Helpers
@using System.Security.Claims
@{
    var controllerName = ViewContext.RouteData.Values["Controller"]?.ToString();
    var actionName = ViewContext.RouteData.Values["Action"]?.ToString();
    
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Equilibrium+</title>
    <meta http-equiv="cache-control" content="no-cache, no-store, must-revalidate" />
    <meta http-equiv="pragma" content="no-cache" />
    <meta http-equiv="expires" content="0" />

    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/pages/investments.css" asp-append-version="true" />
    <link rel="icon" type="image/svg+xml" href="~/images/favicon.svg" asp-append-version="true">
    <link rel="icon" type="image/png" sizes="32x32" href="~/images/icon-32x32.png" asp-append-version="true">
    <link rel="icon" type="image/png" sizes="16x16" href="~/images/icon-16x16.png" asp-append-version="true">
    <link rel="apple-touch-icon" sizes="180x180" href="~/images/apple-touch-icon.png" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/dataTables.bootstrap5.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/responsive.bootstrap5.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/buttons.bootstrap5.min.css" asp-append-version="true" />


    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="sidebar" id="sidebar">
        <partial name="_Partials/_SidebarHeader" />

        <div class="sidebar-menu">
            <div class="sidebar-menu-header">Menu Principal</div>
            <div class="sidebar-menu-item">
                <a asp-controller="Home" asp-action="Index" class="sidebar-menu-link @(controllerName == "Home" && actionName == "Index" ? "active" : "")">
                    <span class="sidebar-menu-icon"><i class="fas fa-home"></i></span>
                    <span>Inicio</span>
                </a>
            </div>

            <partial name="_Partials/_SidebarMenuCreditCards" />
            <partial name="_Partials/_SidebarMenuIncomes" />
            <partial name="_Partials/_SidebarMenuPayments" />
            <partial name="_Partials/_SidebarMenuInvestments" />
            <partial name="_Partials/_SidebarMenuFinancings" />
            <partial name="_Partials/_SidebarMenuReports" />
        </div>
        <partial name="_Partials/_SidebarMenuAdmin" />
    </div>
    <partial name="_Partials/_Topbar" />
    <div class="main-content" id="main-content">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>@Html.Raw(TempData["SuccessMessage"])
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@Html.Raw(TempData["ErrorMessage"])
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/lib/chart.js" asp-append-version="true"></script>
    <script src="~/lib/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="~/lib/dataTables.bootstrap5.min.js" asp-append-version="true"></script>
    <script src="~/lib/dataTables.responsive.min.js" asp-append-version="true"></script>
    <script src="~/lib/responsive.bootstrap5.min.js" asp-append-version="true"></script>
    <script src="~/lib/dataTables.buttons.min.js" asp-append-version="true"></script>
    <script src="~/lib/buttons.bootstrap5.min.js" asp-append-version="true"></script>
    <script src="~/lib/jszip.min.js" asp-append-version="true"></script>
    <script src="~/lib/pdfmake.min.js" asp-append-version="true"></script>
    <script src="~/lib/vfs_fonts.js" asp-append-version="true"></script>
    <script src="~/lib/buttons.html5.min.js" asp-append-version="true"></script>
    <script src="~/lib/buttons.print.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery.mask.min.js" asp-append-version="true"></script>

    <!-- Scripts principais -->
    <script src="~/js/core/core.js" defer></script>
    <script src="~/js/core/ui.js" defer></script>
    <script src="~/js/core/validation.js" defer></script>

    <!-- Módulos reutilizáveis -->
    <script src="~/js/modules/forms.js" defer></script>
    <script src="~/js/modules/tables.js" defer></script>
    <script src="~/js/modules/charts.js" defer></script>
    <script src="~/js/modules/financial.js" defer></script>
    <script src="~/js/modules/usability-improvements.js" defer></script>

    <script src="~/js/pages/dashboard.js" asp-append-version="true" defer></script>
    <script src="~/js/pages/creditcards.js" asp-append-version="true" defer></script>
    <script src="~/js/pages/financings.js" asp-append-version="true" defer></script>
    <script src="~/js/pages/investments.js" asp-append-version="true" defer></script>
    <script src="~/js/pages/payments.js" asp-append-version="true" defer></script>
    <script src="~/js/pages/users.js" asp-append-version="true" defer></script>

    <!-- Inicialização global -->
    <script src="~/js/app.js" asp-append-version="true" defer></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>