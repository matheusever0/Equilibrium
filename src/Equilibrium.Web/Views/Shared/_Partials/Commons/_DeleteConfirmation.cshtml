@using Microsoft.AspNetCore.Html
@model (string EntityName, Guid Id, IHtmlContent EntityDetails)
<div class="alert alert-danger mb-4">
    <h4 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i> Confirmação de Exclusão</h4>
    <p>Tem certeza de que deseja excluir este @Model.EntityName?</p>
    <hr>
    <p class="mb-0">Esta ação não pode ser desfeita e todas as informações relacionadas serão perdidas.</p>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Detalhes</h6>
            </div>
            <div class="card-body">
                @Model.EntityDetails
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-danger">Confirmar Exclusão</h6>
            </div>
            <div class="card-body">
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <p>Ao confirmar esta operação, você está excluindo permanentemente este item.</p>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i> Confirmar Exclusão
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>