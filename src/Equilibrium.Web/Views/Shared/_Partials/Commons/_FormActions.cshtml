@model (string CancelAction, string CancelController, bool IsEdit)
@{
    var cancelAction = Model.CancelAction ?? (Model.IsEdit ? "Details" : "Index");
    var cancelController = Model.CancelController ?? ViewContext.RouteData.Values["Controller"].ToString();
}
<div class="mb-3">
    <button type="submit" class="btn btn-primary">
        <i class="fas fa-save me-1"></i> Salvar
    </button>
    <a asp-controller="@cancelController" asp-action="@cancelAction"
       asp-route-id="@(Model.IsEdit ? ViewContext.RouteData.Values["id"] : null)" class="btn btn-secondary">
        <i class="fas fa-times"></i> Cancelar
    </a>
</div>