@using Equilibrium.Web.Helpers
@using Equilibrium.Web.Models.Investment

@if (await PermissionHelper.HasPermissionAsync(Context, "investments.view"))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="card-body">
                <div class="d-flex justify-content-end mb-3">
                    <a asp-controller="Investments" asp-action="Index" class="btn btn-sm btn-primary">
                        <i class="fas fa-chart-line me-1"></i>Ver Todos
                    </a>
                </div>

                <!-- Investment Summaries By Currency -->
                @if (ViewBag.TotalInvestedByCurrency != null)
                {
                    <h6 class="font-weight-bold mb-3">Resumo de Investimentos por Moeda</h6>

                    @foreach (var currency in ViewBag.TotalInvestedByCurrency.Keys)
                    {
                        <div class="mb-4">
                            <h6 class="font-weight-bold">@currency</h6>
                            <div class="row">
                                <div class="col-lg-4 col-md-6 mb-4">
                                    <div class="card border-left-primary shadow h-100 py-2">
                                        <div class="card-body">
                                            <div class="row no-gutters align-items-center">
                                                <div class="col mr-2">
                                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                        Total Investido
                                                    </div>
                                                    <div class="h5 mb-0 font-weight-bold text-gray-800 currency-value"
                                                         data-value="@ViewBag.TotalInvestedByCurrency[currency]"
                                                         data-currency="@currency">
                                                    </div>
                                                </div>
                                                <div class="col-auto">
                                                    <i class="fas fa-wallet fa-2x text-gray-300"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-4 col-md-6 mb-4">
                                    <div class="card border-left-info shadow h-100 py-2">
                                        <div class="card-body">
                                            <div class="row no-gutters align-items-center">
                                                <div class="col mr-2">
                                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                                        Valor Atual
                                                    </div>
                                                    <div class="h5 mb-0 font-weight-bold text-gray-800 currency-value"
                                                         data-value="@ViewBag.CurrentValueByCurrency[currency]"
                                                         data-currency="@currency">
                                                    </div>
                                                </div>
                                                <div class="col-auto">
                                                    <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @{
                                    var gainLoss = ViewBag.GainLossByCurrency[currency];
                                    var totalInvested = ViewBag.TotalInvestedByCurrency[currency];
                                    var gainLossPercentage = totalInvested > 0 ? (gainLoss / totalInvested) * 100 : 0;
                                    var cardClass = gainLoss > 0 ? "success" : gainLoss < 0 ? "danger" : "secondary";
                                    var textClass = gainLoss > 0 ? "text-success" : gainLoss < 0 ? "text-danger" : "text-secondary";
                                    var icon = gainLoss > 0 ? "fa-arrow-up" : gainLoss < 0 ? "fa-arrow-down" : "";
                                }

                                <div class="col-lg-4 col-md-6 mb-4">
                                    <div class="card border-left-@cardClass shadow h-100 py-2">
                                        <div class="card-body">
                                            <div class="row no-gutters align-items-center">
                                                <div class="col mr-2">
                                                    <div class="text-xs font-weight-bold text-@cardClass text-uppercase mb-1">
                                                        Ganho/Perda Total
                                                    </div>
                                                    <div class="h5 mb-0 font-weight-bold @textClass">
                                                        @if (!string.IsNullOrEmpty(icon))
                                                        {
                                                            <i class="fas @icon me-1"></i>
                                                        }
                                                        <span class="currency-value"
                                                              data-value="@gainLoss"
                                                              data-currency="@currency"></span>
                                                        (@gainLossPercentage.ToString("N2")%)
                                                    </div>
                                                </div>
                                                <div class="col-auto">
                                                    <i class="fas fa-percentage fa-2x text-gray-300"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }

                <!-- Top Performing Investments By Currency -->
                @if (ViewBag.TopPerformingInvestmentsByCurrency != null)
                {
                    <div class="mt-4">
                        <h6 class="font-weight-bold">Melhores Desempenhos por Moeda</h6>

                        @foreach (var currency in ViewBag.TopPerformingInvestmentsByCurrency.Keys)
                        {
                            var topInvestments = ViewBag.TopPerformingInvestmentsByCurrency[currency];

                            @if (topInvestments != null && topInvestments.Count > 0)
                            {
                                <h6 class="font-weight-bold mt-3">@currency</h6>
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Símbolo</th>
                                                <th>Nome</th>
                                                <th class="text-center">Preço Atual</th>
                                                <th class="text-center">Ganho/Perda</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var investment in topInvestments)
                                            {
                                                <tr>
                                                    <td>
                                                        <a asp-controller="Investments" asp-action="Details" asp-route-id="@investment.Id">
                                                            @investment.Symbol
                                                        </a>
                                                    </td>
                                                    <td>@investment.Name</td>
                                                    <td class="text-center">
                                                        <span class="currency-value"
                                                              data-value="@investment.CurrentPrice"
                                                              data-currency="@currency"></span>
                                                    </td>
                                                    <td class="text-center">
                                                        @if (investment.GainLossPercentage > 0)
                                                        {
                                                            <span class="text-success">
                                                                <i class="fas fa-arrow-up me-1"></i>
                                                                <span class="currency-value"
                                                                      data-value="@investment.GainLossValue"
                                                                      data-currency="@currency"></span>
                                                                (@investment.GainLossPercentage.ToString("N2")%)
                                                            </span>
                                                        }
                                                        else if (investment.GainLossPercentage < 0)
                                                        {
                                                            <span class="text-danger">
                                                                <i class="fas fa-arrow-down me-1"></i>
                                                                <span class="currency-value"
                                                                      data-value="@investment.GainLossValue"
                                                                      data-currency="@currency"></span>
                                                                (@investment.GainLossPercentage.ToString("N2")%)
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">
                                                                <span class="currency-value"
                                                                      data-value="@investment.GainLossValue"
                                                                      data-currency="@currency"></span>
                                                                (0.00%)
                                                            </span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                        }
                    </div>
                }
            </div>
        </div>
    </div>
}