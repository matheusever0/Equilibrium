<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gerador de Times</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f5f7fa;
            font-family: 'Segoe UI', Arial, sans-serif;
        }

        .team-generator-container {
            max-width: 1300px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }

        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border-radius: 0.5rem;
            border: none;
            margin-bottom: 1.5rem;
        }

        .card-header {
            border-radius: 0.5rem 0.5rem 0 0 !important;
            font-weight: 600;
        }

        .table th {
            font-weight: 600;
        }

        .accordion-button:not(.collapsed) {
            background-color: rgba(13, 110, 253, 0.1);
            color: #0d6efd;
        }

        .accordion-button:focus {
            box-shadow: none;
        }

        .table-responsive {
            overflow-x: auto;
        }

        .page-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .page-title {
            font-size: 2.5rem;
            font-weight: 700;
            color: #3b5998;
            margin-bottom: 0.5rem;
        }

        .page-subtitle {
            font-size: 1.2rem;
            color: #777;
        }

        .feature-item {
            padding: 1rem;
            border-radius: 0.5rem;
            background-color: rgba(255, 255, 255, 0.8);
            margin-bottom: 1rem;
            border-left: 4px solid #3b5998;
        }

        .feature-icon {
            font-size: 1.5rem;
            color: #3b5998;
            margin-right: 0.5rem;
        }

        .priority-list {
            list-style-type: none;
            padding-left: 0;
        }

        .priority-list li {
            margin-bottom: 0.5rem;
            padding-left: 1.5rem;
            position: relative;
        }

        .priority-list li:before {
            content: "";
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background-color: #3b5998;
        }

        .team-card {
            border-left: 5px solid #3b5998;
        }


        .player-tag {
            display: inline-block;
            font-size: 0.75rem;
            padding: 0.15rem 0.5rem;
            border-radius: 1rem;
            margin-right: 0.25rem;
            background-color: #f0f0f0;
        }

            .player-tag.prelive {
                background-color: #dc3545;
                color: #fff;
                font-weight: bold;
            }

            .player-tag.gira50x {
                background-color: #ffc107;
                color: #212529;
            }

            .player-tag.descanso {
                background-color: #0dcaf0;
                color: #212529;
            }

        .footer {
            text-align: center;
            padding: 1.5rem 0;
            margin-top: 2rem;
            background-color: white;
            border-top: 1px solid #eee;
        }
    </style>
</head>
<body>
    <div class="team-generator-container">
        @RenderBody()
    </div>

    <div class="footer">
        <div class="container">
            <span class="text-muted">Gerador de Times &copy; @DateTime.Now.Year</span>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto-dismiss alerts after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                setTimeout(function() {
                    if (alert) {
                        try {
                            const bsAlert = new bootstrap.Alert(alert);
                            bsAlert.close();
                        } catch (e) {
                            // Fallback for browsers without Bootstrap JS
                            alert.style.display = 'none';
                        }
                    }
                }, 5000);
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>