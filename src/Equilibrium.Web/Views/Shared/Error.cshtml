@using Equilibrium.Web.Models
@using Equilibrium.Web.Models.Generics

@model ErrorViewModel
@{
    ViewData["Title"] = "Erro";
}

<h1 class="text-danger">Erro.</h1>
<h2 class="text-danger">Ocorreu um erro ao processar sua solicitação.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<div class="mt-4">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Voltar para a página inicial</a>
</div>