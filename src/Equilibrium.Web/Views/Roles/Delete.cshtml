@using Equilibrium.Web.Models.Role
<!-- src/Equilibrium.Web/Views/Roles/Delete.cshtml -->
@model RoleModel

@{
    ViewData["Title"] = "Excluir Perfil";
}

<div class="alert alert-danger">
    <h3>Tem certeza que deseja excluir este perfil?</h3>
    <p>Esta ação não poderá ser desfeita.</p>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Descrição</dt>
            <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "-" : Model.Description)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">Excluir</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>