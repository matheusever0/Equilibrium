@using Equilibrium.Web.Models.Permission
@using Equilibrium.Web.Models.Role
@model RoleModel

@{
    ViewData["Title"] = "Detalhes do Perfil";
    var permissions = ViewBag.Permissions as IEnumerable<PermissionModel>;
}

<div class="d-flex justify-content-end mb-3">
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="fas fa-edit me-1"></i> Editar
        </a>
        <a asp-action="ManagePermissions" asp-route-id="@Model.Id" class="btn btn-success">
            <i class="fas fa-key me-1"></i> Gerenciar Permissões
        </a>
        <partial name="_Partials/Commons/_BackButton" model='(Action: "Index", Controller: "Roles", Text: "Voltar")' />
    </div>
</div>

<div class="card shadow mb-4">
    <partial name="_Partials/Commons/_CardHeader" model='(
        Title: "Informações do Perfil",
        BadgeText: "",
        BadgeClass: "",
        Icon: "fa-user-tag",
        CollapseTarget: "")' />
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <partial name="_Partials/Commons/_FinancialDataItem" model='(
                    Label: "Nome",
                    Value: Model.Name,
                    SecondaryText: "",
                    ValueClass: "")' />
            </div>
            <div class="col-md-6">
                <partial name="_Partials/Commons/_FinancialDataItem" model='(
                    Label: "Data de Criação",
                    Value: Model.CreatedAt.ToString("dd/MM/yyyy HH:mm"),
                    SecondaryText: "",
                    ValueClass: "")' />
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="row mb-3">
                <div class="col-12">
                    <partial name="_Partials/Commons/_FinancialDataItem" model='(
                        Label: "Descrição",
                        Value: Model.Description,
                        SecondaryText: "",
                        ValueClass: "")' />
                </div>
            </div>
        }
    </div>
</div>

<div class="card shadow">
    <partial name="_Partials/Commons/_CardHeader" model='(
        Title: "Permissões",
        BadgeText: "",
        BadgeClass: "",
        Icon: "fa-key",
        CollapseTarget: "")' />
    <div class="card-body">
        @if (permissions != null && permissions.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Nome do Sistema</th>
                            <th>Descrição</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var permission in permissions)
                        {
                            <tr>
                                <td>@permission.Name</td>
                                <td><code>@permission.SystemName</code></td>
                                <td>@(string.IsNullOrEmpty(permission.Description) ? "-" : permission.Description)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <partial name="_Partials/Commons/_EmptyState" model='(
                Message: "Este perfil não possui permissões atribuídas.",
                Icon: "fa-key",
                ButtonText: "Gerenciar Permissões",
                ButtonUrl: Url.Action("ManagePermissions", new { id = Model.Id }),
                ButtonIcon: "fa-key",
                IsAlert: true)' />
        }
    </div>
</div>