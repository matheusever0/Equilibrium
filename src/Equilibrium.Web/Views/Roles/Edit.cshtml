@using Equilibrium.Web.Models.Role
@model UpdateRoleModel

@{
    ViewData["Title"] = "Editar Perfil";
}

<div class="d-flex justify-content-end mb-3">
    <partial name="_Partials/Commons/_BackButton" model='(Action: "Details", Controller: "Roles", Text: "Voltar")' />
</div>

<div class="card shadow mb-4">
    <partial name="_Partials/Commons/_CardHeader" model='(
        Title: "Informações do Perfil",
        BadgeText: "",
        BadgeClass: "",
        Icon: "fa-user-tag",
        CollapseTarget: "")' />
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="id" value="@ViewContext.RouteData.Values["id"]" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <partial name="_Partials/Commons/_FormActions" model='(CancelAction: "Details", CancelController: "Roles", IsEdit: true)' />
        </form>
    </div>
</div>