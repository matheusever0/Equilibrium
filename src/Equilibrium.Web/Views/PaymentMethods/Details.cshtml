@model PaymentMethodModel
@using Equilibrium.Web.Helpers
@using Equilibrium.Web.Models.Commons
@using Equilibrium.Web.Models.PaymentMethod
@{
    ViewData["Title"] = "Detalhes do Método de Pagamento";
}

<div class="d-flex justify-content-end mb-3">
    <div>
        @if (!Model.IsSystem && await PermissionHelper.HasPermissionAsync(Context, "paymentmethods.edit"))
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">
                <i class="fas fa-edit me-1"></i> Editar
            </a>
        }
        <partial name="_Partials/Commons/_BackButton" model='(Action: "Index", Controller: "PaymentMethods", Text: "Voltar")' />
    </div>
</div>

<div class="row">
    <!-- Informações do Método de Pagamento -->
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <partial name="_Partials/Commons/_CardHeader" model='(
                Title: "Informações do Método de Pagamento",
                BadgeText: Model.IsSystem ? "Sistema" : "Personalizado",
                BadgeClass: Model.IsSystem ? "bg-success" : "bg-info",
                Icon: "fa-wallet",
                CollapseTarget: "")' />
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <partial name="_Partials/Commons/_FinancialDataItem" model='(
                            Label: "Nome",
                            Value: Model.Name,
                            SecondaryText: "",
                            ValueClass: "")' />

                        <partial name="_Partials/Commons/_FinancialDataItem" model='(
                            Label: "Descrição",
                            Value: string.IsNullOrEmpty(Model.Description) ? "-" : Model.Description,
                            SecondaryText: "",
                            ValueClass: "")' />
                    </div>
                    <div class="col-md-6">
                        <partial name="_Partials/Commons/_FinancialDataItem" model='(
                            Label: "Tipo",
                            Value: GetPaymentMethodTypeDescription(Model.Type),
                            SecondaryText: "",
                            ValueClass: "")' />

                        <partial name="_Partials/Commons/_FinancialDataItem" model='(
                            Label: "Origem",
                            Value: Model.IsSystem ? "Sistema" : "Personalizado pelo usuário",
                            SecondaryText: "",
                            ValueClass: "")' />

                        <partial name="_Partials/Commons/_FinancialDataItem" model='(
                            Label: "Data de Criação",
                            Value: Model.CreatedAt.ToString("dd/MM/yyyy HH:mm"),
                            SecondaryText: "",
                            ValueClass: "")' />
                    </div>
                </div>
            </div>
        </div>

        <!-- Cartões de Crédito (se aplicável) -->
        @if (Model.Type == 2 && Model.CreditCards.Any())
        {
            <div class="card shadow mb-4">
                <partial name="_Partials/Commons/_CardHeader" model='(
                    Title: "Cartões de Crédito Associados",
                    BadgeText: "",
                    BadgeClass: "",
                    Icon: "fa-credit-card",
                    CollapseTarget: "")' />
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover datatable">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Bandeira</th>
                                    <th>Limite</th>
                                    <th>Disponível</th>
                                    <th class="text-center">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var card in Model.CreditCards)
                                {
                                    <tr>
                                        <td>@card.Name</td>
                                        <td>@card.CardBrand (*@card.LastFourDigits)</td>
                                        <td>@string.Format("{0:C2}", card.Limit)</td>
                                        <td>@string.Format("{0:C2}", card.AvailableLimit)</td>
                                        <td class="text-center">
                                            <a asp-controller="CreditCards" asp-action="Details" asp-route-id="@card.Id" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Ações -->
    <div class="col-lg-4">
        <div class="card shadow mb-4">
            <partial name="_Partials/Commons/_CardHeader" model='(
                Title: "Ações",
                BadgeText: "",
                BadgeClass: "",
                Icon: "fa-cogs",
                CollapseTarget: "")' />
            <div class="card-body">
                <a asp-controller="Payments" asp-action="ByMethod" asp-route-id="@Model.Id" class="btn btn-info w-100 mb-3">
                    <i class="fas fa-list me-1"></i> Ver Pagamentos com Este Método
                </a>

                @if (Model.Type == 2)
                {
                    <a asp-controller="CreditCards" asp-action="Create" asp-route-methodId="@Model.Id" class="btn btn-success w-100 mb-3">
                        <i class="fas fa-credit-card me-1"></i> Adicionar Cartão de Crédito
                    </a>
                }

                @if (!Model.IsSystem)
                {
                    @if (await PermissionHelper.HasPermissionAsync(Context, "paymentmethods.edit"))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary w-100 mb-3">
                            <i class="fas fa-edit me-1"></i> Editar Método de Pagamento
                        </a>
                    }

                    @if (await PermissionHelper.HasPermissionAsync(Context, "paymentmethods.delete"))
                    {
                        <partial name="_Partials/Commons/_DeleteButton"
                                 model='@(new DeleteButtonModel(Model.Id, "PaymentMethods", "método de pagamento", Model.Name, false))' />
                    }
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i> Este é um método de pagamento do sistema e não pode ser editado ou excluído.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@functions {
    string GetPaymentMethodTypeDescription(int type)
    {
        return type switch
        {
            1 => "Dinheiro",
            2 => "Cartão de Crédito",
            3 => "Cartão de Débito",
            4 => "Transferência Bancária",
            5 => "Carteira Digital",
            6 => "Cheque",
            7 => "Outro",
            _ => "Desconhecido"
        };
    }
}