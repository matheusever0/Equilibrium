@model IncomeModel
@using Equilibrium.Web.Models.Income
@{
    ViewData["Title"] = "Excluir Receita";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between mb-3">
        <partial name="_Partials/Commons/_BackButton" model='(Action: "Details", Controller: "Incomes", Text: "Voltar")' />
    </div>

    <div class="alert alert-danger mb-4">
        <h4 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i> Confirmação de Exclusão</h4>
        <p>Tem certeza de que deseja excluir esta receita?</p>
        <hr>
        <p class="mb-0">Esta ação não pode ser desfeita e todas as informações relacionadas serão perdidas.</p>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow mb-4">
                <partial name="_Partials/Commons/_CardHeader" model='(
                    Title: "Detalhes",
                    BadgeText: "",
                    BadgeClass: "",
                    Icon: "fa-info-circle",
                    CollapseTarget: "")' />
                <div class="card-body">
                    <partial name="_Partials/Commons/_FinancialDataItem" model='(Label: "Descrição", Value: Model.Description, SecondaryText: "", ValueClass: "")' />
                    <partial name="_Partials/Commons/_FinancialDataItem" model='(Label: "Valor", Value: Model.GetFormattedAmount(), SecondaryText: "", ValueClass: "")' />
                    <partial name="_Partials/Commons/_FinancialDataItem" model='(Label: "Data de Vencimento", Value: Model.GetFormattedDueDate(), SecondaryText: "", ValueClass: "")' />
                    <partial name="_Partials/Commons/_FinancialDataItem" model='(Label: "Tipo", Value: Model.IncomeTypeName, SecondaryText: "", ValueClass: "")' />
                    <partial name="_Partials/Commons/_FinancialDataItem" model='(Label: "Status", Value: "<span class=\"badge " + Model.StatusBadgeClass + "\">" + Model.StatusDescription + "</span>", SecondaryText: "", ValueClass: "")' />

                    @if (Model.ReceivedDate.HasValue)
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i> Atenção: Esta receita já foi recebida. Excluí-la pode afetar seus relatórios financeiros.
                        </div>
                    }

                    @if (Model.Installments != null && Model.Installments.Any())
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle me-2"></i> Esta receita possui parcelas associadas que também serão excluídas.
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow mb-4">
                <partial name="_Partials/Commons/_CardHeader" model='(
                    Title: "Confirmar Exclusão",
                    BadgeText: "",
                    BadgeClass: "bg-danger",
                    Icon: "fa-trash",
                    CollapseTarget: "")' />
                <div class="card-body">
                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <p>Ao confirmar esta operação, você está excluindo permanentemente esta receita.</p>

                        <partial name="_Partials/Commons/_FormActions" model='(CancelAction: "Details", CancelController: "Incomes", IsEdit: false)' />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>