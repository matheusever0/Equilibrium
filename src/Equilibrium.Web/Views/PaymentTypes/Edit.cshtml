@model Equilibrium.Web.Models.UpdatePaymentTypeModel
@{
    ViewData["Title"] = "Editar Tipo de Pagamento";
}

<div class="d-flex justify-content-end mb-3">
    <partial name="_Partials/Commons/_BackButton" model='(
        Action: "Details",
        Controller: "PaymentTypes",
        Text: "Voltar")' />
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <partial name="_Partials/Commons/_CardHeader" model='(
                Title: "Informações do Tipo de Pagamento",
                BadgeText: "",
                BadgeClass: "",
                Icon: "fa-tag",
                CollapseTarget: "")' />
            <div class="card-body">
                <form asp-action="Edit" method="post" data-page="payment">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" name="id" value="@ViewContext.RouteData.Values["id"]" />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Description" class="form-label"></label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="IsFinancingType" class="form-check-input" type="checkbox" id="isFinancingTypeSwitch" />
                            <label class="form-check-label" for="isFinancingTypeSwitch">
                                <strong>Tipo de Financiamento</strong> - Marque esta opção se este tipo de pagamento estiver relacionado a financiamentos
                            </label>
                        </div>
                        <span asp-validation-for="IsFinancingType" class="text-danger"></span>
                    </div>

                    <partial name="_Partials/Commons/_FormActions" model='(
                        CancelAction: "Details",
                        CancelController: "PaymentTypes",
                        IsEdit: true)' />
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card shadow mb-4">
            <partial name="_Partials/Commons/_CardHeader" model='(
                Title: "Informações",
                BadgeText: "",
                BadgeClass: "",
                Icon: "fa-info-circle",
                CollapseTarget: "")' />
            <div class="card-body">
                <p>Atualize os dados do tipo de pagamento:</p>
                <ul>
                    <li><strong>Nome:</strong> Um nome para identificar o tipo de pagamento (ex: Aluguel, Alimentação, Transporte).</li>
                    <li><strong>Descrição:</strong> Uma breve descrição do tipo de pagamento.</li>
                    <li><strong>Tipo de Financiamento:</strong> Marque esta opção caso este tipo de pagamento seja relacionado a financiamentos.</li>
                </ul>
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Você está editando um tipo de pagamento personalizado.
                </div>
            </div>
        </div>
    </div>
</div>