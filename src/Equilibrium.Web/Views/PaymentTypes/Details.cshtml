@model Equilibrium.Web.Models.PaymentTypeModel
@using Equilibrium.Web.Models.Commons
@using Equilibrium.Web.Helpers
@{
    ViewData["Title"] = "Detalhes do Tipo de Pagamento";
}

<div class="d-flex justify-content-end mb-3">
    <div>
        @if (!Model.IsSystem && await PermissionHelper.HasPermissionAsync(Context, "paymenttypes.edit"))
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">
                <i class="fas fa-edit"></i> Editar
            </a>
        }
        <partial name="_Partials/Commons/_BackButton" model='(Action: "Index", Controller: "PaymentTypes", Text: "Voltar")' />
    </div>
</div>

<div class="card shadow mb-4">
    <partial name="_Partials/Commons/_CardHeader" model='(
        Title: "Informações do Tipo de Pagamento",
        BadgeText: Model.IsSystem ? "Sistema" : "Personalizado",
        BadgeClass: Model.IsSystem ? "bg-info" : "bg-primary",
        Icon: "fa-tag",
        CollapseTarget: "")' />
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <partial name="_Partials/Commons/_FinancialDataItem" model='(
                    Label: "Nome",
                    Value: Model.Name,
                    SecondaryText: "",
                    ValueClass: "")' />
            </div>
            <div class="col-md-6">
                <partial name="_Partials/Commons/_FinancialDataItem" model='(
                    Label: "Data de Criação",
                    Value: Model.CreatedAt.ToString("dd/MM/yyyy HH:mm"),
                    SecondaryText: "",
                    ValueClass: "")' />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <partial name="_Partials/Commons/_FinancialDataItem" model='(
                    Label: "Tipo de Financiamento",
                    Value: Model.IsFinancingType ? "Sim" : "Não",
                    SecondaryText: "",
                    ValueClass: "")' />
            </div>
            <div class="col-md-6">
                <partial name="_Partials/Commons/_FinancialDataItem" model='(
                    Label: "Origem",
                    Value: Model.IsSystem ? "Sistema" : "Personalizado pelo usuário",
                    SecondaryText: "",
                    ValueClass: "")' />
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="row mb-3">
                <div class="col-12">
                    <partial name="_Partials/Commons/_FinancialDataItem" model='(
                        Label: "Descrição",
                        Value: Model.Description,
                        SecondaryText: "",
                        ValueClass: "")' />
                </div>
            </div>
        }

        @if (Model.IsSystem)
        {
            <div class="alert alert-info mt-4">
                <i class="fas fa-info-circle"></i> Este é um tipo de pagamento do sistema e não pode ser editado ou excluído.
            </div>
        }
        else
        {
            <hr />
            <div class="row">
                <div class="col-12">
                    <a asp-controller="Payments" asp-action="ByType" asp-route-id="@Model.Id" class="btn btn-info mb-2">
                        <i class="fas fa-list me-1"></i> Ver Pagamentos Deste Tipo
                    </a>

                    @if (await PermissionHelper.HasPermissionAsync(Context, "paymenttypes.delete"))
                    {
                        <partial name="_Partials/Commons/_DeleteButton"
                                 model='@(new DeleteButtonModel(Model.Id, "PaymentTypes", "tipo de pagamento", Model.Name, false))' />
                    }
                </div>
            </div>
        }
    </div>
</div>