@using Microsoft.AspNetCore.Components
@model Equilibrium.Web.Models.IncomeType.IncomeTypeModel
@{
    ViewData["Title"] = "Excluir Tipo de Receita";

    RenderFragment entityDetails = @<text>
        <dl class="row">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            @if (!string.IsNullOrEmpty(Model.Description))
        {
            <dt class="col-sm-3">Descrição</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        }

            <dt class="col-sm-3">Tipo</dt>
            <dd class="col-sm-9">
                <partial name="_Partials/Commons/_StatusBadge" model='(
                    BadgeClass: Model.IsSystem ? "bg-info" : "bg-primary",
                    Description: Model.IsSystem ? "Sistema" : "Personalizado")' />
            </dd>

            <dt class="col-sm-3">Data de Criação</dt>
            <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
        </dl>

        <div class="alert alert-warning mt-3">
            <i class="fas fa-exclamation-circle"></i>
            Se houver receitas associadas a este tipo, elas não serão excluídas, mas perderão a associação com este tipo.
        </div>
    </text>;
}

<div class="d-flex justify-content-end mb-3">
    <partial name="_Partials/Commons/_BackButton" model='(Action: "Details", Controller: "IncomeTypes", Text: "Voltar")' />
</div>

<partial name="_Partials/Commons/_DeleteConfirmation" model='(EntityName: "tipo de receita", Id: Guid.Parse(Model.Id), EntityDetails: entityDetails)' />