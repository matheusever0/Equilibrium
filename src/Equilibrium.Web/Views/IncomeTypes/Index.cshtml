@using Equilibrium.Web.Helpers
@using Equilibrium.Web.Models.Commons
@model IEnumerable<Equilibrium.Web.Models.IncomeType.IncomeTypeModel>
@{
    ViewData["Title"] = ViewBag.Title ?? "Tipos de Receita";
    var isSystemView = ViewBag.IsSystemView ?? false;
    var isUserView = ViewBag.IsUserView ?? false;
}

<div class="d-flex justify-content-end mb-3">
    <div>
        @if (await PermissionHelper.HasPermissionAsync(Context, "incomes.create"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Novo Tipo
            </a>
        }
    </div>
</div>

<div class="card shadow mb-4">
    <partial name="_Partials/Commons/_CardHeader" model='(
        Title: "Filtros",
        BadgeText: "",
        BadgeClass: "",
        Icon: "fa-filter",
        CollapseTarget: "collapseFilters")' />
    <div class="card-body collapse show" id="collapseFilters">
        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="d-flex gap-2">
                    <a asp-action="Index" class="btn btn-outline-primary btn-sm @(ViewContext.RouteData.Values["action"].ToString() == "Index" && !isSystemView && !isUserView ? "active" : "")">
                        <i class="fas fa-list"></i> Todos
                    </a>
                    <a asp-action="System" class="btn btn-outline-success btn-sm @(isSystemView ? "active" : "")">
                        <i class="fas fa-cog"></i> Sistema
                    </a>
                    <a asp-action="User" class="btn btn-outline-info btn-sm @(isUserView ? "active" : "")">
                        <i class="fas fa-user"></i> Minhas Receitas
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <partial name="_Partials/Commons/_CardHeader" model='(
        Title: "Tipos de Receita",
        BadgeText: "",
        BadgeClass: "",
        Icon: "fa-tags",
        CollapseTarget: "")' />
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover datatable">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Descrição</th>
                            <th>Tipo</th>
                            <th>Data de Criação</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var incomeType in Model.OrderBy(e => e.Name))
                        {
                            <tr>
                                <td>
                                    <a asp-action="Details" asp-route-id="@incomeType.Id">
                                        @incomeType.Name
                                    </a>
                                </td>
                                <td>@incomeType.Description</td>
                                <td>
                                    <partial name="_Partials/Commons/_StatusBadge" model='(
                                        BadgeClass: incomeType.IsSystem ? "bg-info" : "bg-primary",
                                        Description: incomeType.IsSystem ? "Sistema" : "Personalizado")' />
                                </td>
                                <td>@incomeType.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@incomeType.Id" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@incomeType.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    @if (!incomeType.IsSystem)
                                    {
                                        <partial name="_Partials/Commons/_DeleteButton"
                                                 model='@(new DeleteButtonModel(incomeType.Id, "IncomeTypes", "tipo de receita", incomeType.Name, true))' />
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <partial name="_Partials/Commons/_EmptyState" model='(
                Message: "Nenhum tipo de receita encontrado.",
                Icon: "fa-tags",
                ButtonText: await PermissionHelper.HasPermissionAsync(Context, "incomes.create") ? "Criar Novo Tipo" : "",
                ButtonUrl: Url.Action("Create"),
                ButtonIcon: "fa-plus",
                IsAlert: true)' />
        }
    </div>
</div>