@using Equilibrium.Web.Helpers
@model IEnumerable<Equilibrium.Web.Models.IncomeType.IncomeTypeModel>
@{
    ViewData["Title"] = ViewBag.Title ?? "Tipos de Receita";
}

<div class="d-flex justify-content-end mb-3">
    <div>
        @if (await PermissionHelper.HasPermissionAsync(Context, "incomes.create"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i> Novo Tipo
            </a>
        }
    </div>
</div>

<div class="card shadow mb-4">
    <partial name="_Partials/Commons/_CardHeader" model='(
        Title: "Filtros",
        BadgeText: "",
        BadgeClass: "")' />
    <div class="card-body collapse show" id="collapseFilters">
        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="d-flex gap-2">
                    <a asp-action="Index" class="btn btn-outline-primary @(ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewBag.Title == null ? "active" : "")">
                        <i class="fas fa-list"></i> Todos
                    </a>
                    <a asp-action="Index" class="btn btn-outline-primary @(ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewBag.Title == null ? "active" : "")">
                        <i class="fas fa-cog"></i> Sistema
                    </a>
                    <a asp-action="Index" class="btn btn-outline-primary @(ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewBag.Title == null ? "active" : "")">
                        <i class="fas fa-user"></i> Meus
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <partial name="_Partials/Commons/_CardHeader" model='(
        Title: "Tipos de Receita",
        BadgeText: "",
        BadgeClass: "")' />
    <div class="card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover datatable">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Descrição</th>
                            <th>Tipo</th>
                            <th>Data de Criação</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var incomeType in Model.OrderBy(e => e.Name))
                        {
                            <tr>
                                <td>
                                    <a asp-action="Details" asp-route-id="@incomeType.Id">
                                        @incomeType.Name
                                    </a>
                                </td>
                                <td>@incomeType.Description</td>
                                <td>
                                    <partial name="_Partials/Commons/_StatusBadge" model='(
                                        BadgeClass: incomeType.IsSystem ? "bg-info" : "bg-primary",
                                        Description: incomeType.IsSystem ? "Sistema" : "Personalizado")' />
                                </td>
                                <td>@incomeType.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-center">
                                    <partial name="_Partials/Commons/_ActionButtons" model='(
                                        Id: incomeType.Id,
                                        CanView: true,
                                        CanEdit: !incomeType.IsSystem && await PermissionHelper.HasPermissionAsync(Context, "incomes.edit"),
                                        CanDelete: !incomeType.IsSystem && await PermissionHelper.HasPermissionAsync(Context, "incomes.delete"),
                                        ControllerName: "IncomeTypes")' />
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i> Nenhum tipo de receita encontrado.
            </div>
        }
    </div>
</div>